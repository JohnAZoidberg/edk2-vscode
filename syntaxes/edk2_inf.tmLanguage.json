{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "source.edk2_inf",
	"patterns": [
		{
			"include": "#edk2_inf_color"
		},
		{
			"include": "source.c"
		}
	],
	"repository": {
		"edk2_inf_color": {
			"patterns": [
				{
					"name": "variable.language.edk2_inf",
					"match": "INF_VERSION|BASE_NAME|FILE_GUID|MODULE_TYPE|VERSION_STRING|ENTRY_POINT|MODULE_UNI_FILE|LIBRARY_CLASS"
				},
				{
					"name": "variable.language.edk2_inf",
					"match": "DXE_CORE|PEIM|PEI_CORE"
				},
				{
					"name": "variable.language.edk2_inf",
					"match": "SEC|DXE_DRIVER|DXE_RUNTIME_DRIVER|DXE_SAL_DRIVER|DXE_SMM_DRIVER|SMM_CORE|UEFI_APPLICATION|UEFI_DRIVER"
				},
				{
					"name": "variable.parameter.edk2_inf",
					"match": "[a-zA-Z0-9_/]+\\.[a-zA-Z]+"
				},
				{
					"name": "keyword.control.edk2_inf",
					"match": "DEFINE|endif|ifdef|ifndef"
				},
				{
					"name": "constant.numeric.edk2_inf",
					"match": "[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}"
				},
				{
					"name": "string.quoted.double.edk2_inf",
					"begin": "L\"",
					"end": "\""
				},
				{
					"begin": "\\[",
					"end": "\\]",
					"patterns": [
						{
							"name": "string.quoted.double.edk2_inf",
							"match": "[a-zA-Z0-9.]+"
						}
					]
				},
				{
					"begin": "\\<",
					"end": "\\>",
					"patterns": [
						{
							"name": "string.quoted.double.edk2_inf",
							"match": "[a-zA-Z0-9.]+"
						}
					]
				},
				{
					"begin": "\\$\\(",
					"end": "\\)",
					"patterns": [
						{
							"name": "support.function.edk2_inf",
							"match": "[a-zA-Z0-9_]+"
						}
					]
				},
				{
					"name": "comment.line.number-sign.edk2_inf",
					"begin": "#",
					"end": "\n"
				}
			]
		}
	},
	"scopeName": "source.edk2_inf"
}